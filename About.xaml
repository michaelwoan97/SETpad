<Window x:Name="aboApplication" x:Class="nnguyen6831_A2.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nnguyen6831_A2"
        mc:Ignorable="d"
        Title="About" Height="250" Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Name="stkAppInform" VerticalAlignment="Center"  >
            <StackPanel.Resources>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="Margin" Value="10,10"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock>Notepad clone Application</TextBlock>
            <TextBlock>Version 1.0</TextBlock>
            <TextBlock>Nghia Nguyen</TextBlock>
            <TextBlock TextWrapping="Wrap">
                The purpose of this application is to mimic the behaviour of
                            the notepad application.
            </TextBlock>
        </StackPanel>
       
        <Button Grid.Row="1" Height="25" Width="60" Content="OK" Click="Button_Click"></Button>
    </Grid>
</Window>
